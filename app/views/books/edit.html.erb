<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <div>
    <%= @book.errors.count %>件のerrorが発生しました。
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </div>
<% end %>

<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <div class = "book_title">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class = "book_body">
    <label>Body</label>
    <%= f.text_area :body%>
  </div>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<div>
  <%= link_to "Show",book_path %>
  <%= link_to "Back",books_path %>
</div>