<h1>Editing Book</h1>
<%= form_with model:@book, local: true do |f| %>
  <div class = "book_title">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class = "book_body">
    <label>Body</label>
    <%= f.text_area :body%>
  </div>
  <div>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>