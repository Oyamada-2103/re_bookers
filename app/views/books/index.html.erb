<!--メッセージ文-->
<p id="notice">
 <%= notice %>
</p>

<!--投稿一覧部分-->
<h1>Books</h1>
<table cellpadding>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show",book_path(book[:id]) %></td>
        <td><%= link_to "Edit",edit_book_path(book[:id]) %></td>
        <td><%= link_to "Destroy",book_path(book[:id]),method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--新規投稿失敗時エラーメッセージ-->
<% if @book.errors.any? %>
  <div>
    <%= @book.errors.count %>件のerrorsが発生しました。
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </div>
<% end %>


<!--新規投稿部分-->
<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
  <div class = "field">
    <label for = "book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class = "field">
    <label for = "book_body">Body</label>
    <%= f.text_field :body %>
  </div>
  <div class = "action">
    <%= f.submit 'Create Book '%>
  </div>
<% end %>