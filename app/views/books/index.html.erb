<!--投稿一覧部分-->
<% @books.each do |book| %>
  <%= book.title %>
  <%= book.body %>
  <%= link_to "show",book_path(book[:id]) %>
<% end %>

<p>＝＝＝＝＝＝＝＝ここから新規投稿＝＝＝＝＝＝</p>

<!--新規投稿部分-->
<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book '%>
<% end %>