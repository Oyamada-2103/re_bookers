<!--投稿一覧部分-->
<table cellpadding>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show",book_path(book[:id]) %></td>
        <td><%= link_to "Edit",edit_book_path(book[:id]) %></td>
        <td><%= link_to "Destroy",book_path(book[:id]),method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>＝＝＝＝＝＝＝＝ここから新規投稿＝＝＝＝＝＝</p>

<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました。
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<!--新規投稿部分-->
<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book '%>
<% end %>